{% extends 'base.html.twig' %}

{% block title %}Saison #{{ season.number }}{% endblock %}

{% block body %}
    <div class="media-body">
        <h1 class="mt-0"> Saison {{ season.number }} de {{ program.title }}</h1>
        <p>{{ season.description }} de {{ program.title }}, est constituée de {{ season.episodes|length }} année de sortie : {{ season.year }}</p>

        {% if season.episodes|length > 0 %}
            <h2>Liste des épisodes :</h2>
            <ul>
                {% for episode in season.episodes %}
                    <li>
                        <h2>Episode : {{ episode.number }}/ {{ episode.title }}</h2>
                        <p>{{ episode.synopsis }}</p>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p>Aucun épisode disponible pour cette saison.</p>
        {% endif %}
    </div>

    <a href="{{ path('program_show', {'slug': program.slug}) }}">
        Retour à la page de la série
    </a>
{% endblock %}