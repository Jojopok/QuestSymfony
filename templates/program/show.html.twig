{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            {% if programDuration %}
                <p>Durée totale : {{ programDuration }}</p>
            {% endif %}

            {% if program.seasons|length > 0 %}
                <h2>Saisons disponibles :</h2>
                <ul>
                    {% for season in program.seasons %}
                        <li>
                            <a href="{{ path('program_season_show', {slug: program.slug, number: season.number}) }}">
                                Saison {{ season.number }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
                <strong>Acteurs :</strong>
                <ul>
                    <h2>Acteurs associés :</h2>
                    <ul>
                        {% for actor in program.actors %}
                            <li><a href="{{ path('actor_show', {'id': actor.id}) }}">{{ actor.name }}</a></li>
                        {% endfor %}
                </ul>
            {% else %}
                <p>Aucune saison disponible pour cette série.</p>
            {% endif %}

        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}